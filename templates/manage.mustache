{{!
    @template local_alias/manage


    Example context (json):
    {

    }
}}
<div class="modal fade" id="aliasModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Alias</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you want to delete alias?
            </div>
            <div class="modal-footer">
                <button type="button" class="confirm-delete-alias btn btn-primary">Confirm</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 pb-5">
        <h1>Welcome to Manage Alias</h1>
    </div>
</div>
<div class="row">
    <div class="col-12 pb-4">
        <h4>Number of Aliases available: {{count}}</h4>
    </div>
</div>
<div class="row">
    <div class="col-6 pb-6">
        {{{form}}}
    </div>
</div>
<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col">Friendly</th>
                <th scope="col">Destination</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {{#alias}}
                <tr>
                    <td>{{friendly}}</td>
                    <td>{{destination}}</td>
                    <td>
                        <button type="button" class="btn btn-primary" onclick="location.href='{{editurl}}?id={{id}}'">
                            Edit
                        </button>
                        <button type="button" data-toggle="modal" class="aliasid{{id}} alias-delete-btn btn btn-danger" data-target="#aliasModal">
                            Delete
                        </button>
                    </td>
                </tr>
            {{/alias}}
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <br/>
        {{{paginate}}}
    </div>
</div>
<div class="row">
    <div class="col-12">
        <br/>
        <input type="button" class="btn btn-primary" value="Create Alias" onclick="location.href='{{editurl}}'">
    </div>
</div>
