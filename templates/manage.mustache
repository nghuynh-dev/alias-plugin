{{!
    @template local_alias/manage


    Example context (json):
    {

    }
}}
<!--<div class="container">-->
    <div class="row">
        <div class="col-12">
            <h1>Manage Alias</h1>
            <br/>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Friendly</th>
                        <th scope="col">Destination</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#alias}}
                        <tr>
                            <td>{{friendly}}</td>
                            <td>{{destination}}</td>
                            <td>
                                <button type="button" class="btn btn-primary" onclick="location.href='{{editurl}}?id={{id}}'">
                                    Edit
                                </button>
                                <button type="button" class="btn btn-danger">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    {{/alias}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <br/>
            <input type="button" class="btn btn-primary" value="Create Alias" onclick="location.href='{{editurl}}'">
        </div>
    </div>
